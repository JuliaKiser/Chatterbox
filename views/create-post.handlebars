{{!-- CARD TO CREATE A POST --}}
        <div class="card" style="width: 50rem;">
            <div class="card-header bg-success">
                New Post
            </div>
            <div class="card-body">
                <form action="" method="POST">
                    <div class="form-floating mb-4 row">
                        <div class="col-lg-6 col-md-8 col-sm-10">
                            <input type="text" class="form-control" id="post-title" placeholder="Post Title"
                                autofocus="true">
                        </div>
                    </div>
                    <div class="mb-3">
                        <textarea rows="5" class="form-control" placeholder="Post Content"
                            name="post-content"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Create
                        </button>
                        <button class="btn btn-danger">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>