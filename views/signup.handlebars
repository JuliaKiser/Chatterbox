<div class="container-flud col-8 mx-auto">
<main class="form-signin text-center mt-4">
    <form id="signup-form">
        <h1 class="h3 mb-5 fw-normal">Sign Up</h1>

        <div class="form-floating mb-4">
            <input type="text" class="form-control" id="email-signup" placeholder="Email" autofocus="true">
            <label for="username-signup">Email</label>
        </div>
        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="username-signup" placeholder="Username" autofocus="true">
            <label for="password-signup">Username</label>
        </div>
        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="password-signup" placeholder="Password" autofocus="true">
            <label for="password-signup">Password</label>
        </div>
        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="verify-password-signup" placeholder="Verify Password" autofocus="true">
            <label for="password-signup">Verify Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-info mb-5" type="submit">Sign Up</button>
        <a class="login-link mt-3" href="/login">Already have an account? Login instead</a>
    </form>
</main>
</div>

<script src="/js/signup.js"></script>