<body>

    {{!-- TODO: add toggle for if a page is selected, current pages link in navbar has bootstrap class of active --}}
    {{!-- TODO: at certain breakpoint navbar menu links collapse to hamburger menu --}}

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-pills nav-fill">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="/images/CB-Logo-Transparent.png" style="height: 75px; "></a>
                <ul class="navbar-nav">

                    {{#if logged_in}}
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/profile" class="nav-link">My Profile</a>
                    </li>
                    <li class="nav-item">
                        <a href="/create-post" class="nav-link">Create Post</a>
                    </li>
                    <li class="nav-item">
                        <a href="/settings" class="nav-link">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a href="/help" class="nav-link">?</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" id="logout">Logout</a>
                    </li>

                    {{else}}
                    <li class="nav-item">
                        <a href="/signup" class="nav-link">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a href="/login" class="nav-link">Login</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </nav>
    </header>

    <main class="row">
        {{!-- If logged in; show sidebar on every page with main body --}}
        {{#if logged_in}}
        {{>sidebar}}
        <section class="col-8 mx-auto mt-5 mb-5" id="logged_in body">
        {{{ body }}}
        </section>

        {{!-- Else if not logged in, no sidebar is ever visible, only the main body --}}
        {{else}}
        <section class="col-8 mx-auto mt-5 mb-5">
        {{{ body }}}
        </section>
        {{/if}}
        
    </main>

